version: '3.8'
services:
  app:
    build:
      context: .
      dockerfile: Dockerfile.full
      args:
        - REACT_APP_API_URL=/api
    ports:
      - "4080:80"  # Nginx port for serving frontend
      - "5001:5000"  # Backend port
    environment:
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - DB_USER=loot_user
      - DB_HOST=db
      - DB_NAME=loot_tracking
      - DB_PASSWORD=
      - DB_PORT=5432
      - PORT=5000
      - JWT_SECRET=
      - OPENAI_API_KEY=
    depends_on:
      - db
    container_name: group1_app

  db:
    image: postgres:16
    environment:
      - POSTGRES_USER=loot_user
      - POSTGRES_PASSWORD=
      - POSTGRES_DB=loot_tracking
    volumes:
      - ./database/00-extensions.sql:/docker-entrypoint-initdb.d/00-extensions.sql
      - ./database/init.sql:/docker-entrypoint-initdb.d/01-init.sql
      - ./database/item_data.sql:/docker-entrypoint-initdb.d/02-item_data.sql
      - ./database/mod_data.sql:/docker-entrypoint-initdb.d/03-mod_data.sql
      - ./group1_postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
    container_name: group1_db

volumes:
  group1_postgres_data:
    name: group1_postgres_data