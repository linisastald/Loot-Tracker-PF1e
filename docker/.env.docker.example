# Docker Environment Variables Template
# Copy this file to .env.docker and fill in your actual values
# This file contains sensitive information and should NEVER be committed to version control

# Database Credentials
POSTGRES_USER=loot_user
POSTGRES_PASSWORD=generate_a_very_strong_password_here
POSTGRES_DB=loot_tracking

# Database Connection Settings
DB_USER=loot_user
DB_HOST=db
DB_NAME=loot_tracking
DB_PASSWORD=same_password_as_POSTGRES_PASSWORD
DB_PORT=5432

# JWT Secrets (generate unique ones for each environment)
# You can generate these with: openssl rand -hex 32
ROTR_JWT_SECRET=generate_64_character_random_string_here
SNS_JWT_SECRET=generate_different_64_character_random_string_here
TEST_JWT_SECRET=generate_another_64_character_random_string_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# MySQL Root Password for Nginx Proxy Manager
MYSQL_ROOT_PASSWORD=generate_strong_mysql_root_password
NPM_DB_PASSWORD=generate_strong_npm_db_password

# Application Ports (if you need to change defaults)
BACKEND_PORT=5000
FRONTEND_PORT=80

# CORS Origins
ROTR_ALLOWED_ORIGINS=https://rotr.yourdomain.com
SNS_ALLOWED_ORIGINS=https://sns.yourdomain.com
TEST_ALLOWED_ORIGINS=https://test.yourdomain.com

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# Discord Integration (optional)
DISCORD_WEBHOOK_URL=your_discord_webhook_url
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret